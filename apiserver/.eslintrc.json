{
    "extends": [
        "eslint:recommended",
        "plugin:promise/recommended"
    ],
    "env": {
        "commonjs": true,
        "node": true,
        "shared-node-browser": true,
        "jest": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "impliedStrict": true
        }
    },
    "rules": {
        "no-console": "off",
        "strict": [
            "error",
            "global"
        ],
        "curly": "warn",
        "quotes": [
            "error",
            "single"
        ]
    },
    "plugins": [
        "promise"
    ]
}